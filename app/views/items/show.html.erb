<div class="container">
 <div class="row">
  <div class="col-sm-3 col-lg-2 mt-3 mb-3">
   <h3 class="title-user">商品詳細</h3>
  </div>
 </div>
</div>

<%= form_with model:@item, local:true do |f| %>
 <div class="container">
  <div class="row">
   <table class="col-sm-12 col-md-8 col-lg-6 mt-sm-5 mb-5 table-bordered">
    <tr height="50">
     <th>商品画像</th>
     <th><%= attachment_image_tag @item, :image, size: '250x200' %></th>
    </tr>

    <tr height="50">
     <th>商品名</th>
     <th><%= @item.name %></th>
    </tr>

    <tr height="50">
     <th>商品内容</th>
     <th><%= @item.content %></th>
    </tr>
    <tr>
     <th><%= link_to "一覧に戻る", items_path, class: "btn btn-primary" %></th>
    </tr>
   </table>
  </div>
 </div>

<% end %>

<style type="text/css">

 .title-user {
  background:linear-gradient(45deg, #4fffc4, #fff);
  font-family: YuGothic;
 }

</style>

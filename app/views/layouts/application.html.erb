<!DOCTYPE html>
<html>
  <head>
    <title>SalesBrain</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom">
       <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" atia-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
         </button>
         <div class="title">SalesBrain <i class="fas fa-brain" ></i></div>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto d-flex">
           <% if admin_signed_in? %>
            <li class="nav-item btn">
             <%= link_to "ユーザー一覧", admin_users_path %>
            </li>

            <li class="nav-item btn">
             <%= link_to "得意先一覧", admin_customers_path %>
            </li>

            <li class="nav-item btn">
             <%= link_to "商品一覧", admin_items_path %>
            </li>

            <li class="nav-item btn">
             <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
           <% elsif user_signed_in? %>
            <li class="nav-item btn">
             <%= link_to "マイページ", my_page_path(current_user.id), class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item btn">
             <%= link_to "日報一覧", daily_reports_path, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item btn">
             <%= link_to "得意先一覧", customers_path, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item btn">
             <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
            </li>

            <li class="nav-item btn">
             <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
           <% else %>
            <li class="nav-item btn">
             <%= link_to "ログイン", new_user_session_path %>
            </li>

            <li class="nav-item btn">
             <%= link_to "新規登録", new_user_registration_path %>
            </li>
           <% end %>
          </ul>
         </div>
       </div>
      </nav>
   </header>
    <%= yield %>
  </body>
</html>

<style type="text/css">
 .title {
  font-size: 30px;
 }
</style>
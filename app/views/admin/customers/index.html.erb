<div class="container">
 <div class="row">
  <div class="col-sm-6 mt-3">
   <h2>得意先一覧</h2>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto mb-3">
   <div class="text-right"><%= link_to "新規登録", new_admin_customer_path, class: "btn btn-primary" %></div>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto">
   <table class="table">
    <thead>
     <tr class="table-secondary">
      <th>会社名</th>
      <th>住所</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <% @customers.each do |customer| %>
      <tr>
       <th><%= customer.name %></th>
       <th><%= customer.address %></th>
       <th class="text-center"><%= link_to "詳細", admin_customer_path(customer.id) %></th>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto mb-3">
   <div class="col-2 mx-auto"><%= paginate @customers %></div>
  </div>
 </div>
</div>
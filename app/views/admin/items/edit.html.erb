<h2>商品情報編集</h2>

<%= form_with model:[:admin, @item], local:true do |f| %>
 <div>
   <%= f.label "商品画像" %><%= f.attachment_field :image, placeholder: "商品画像" %>
 </div>
 <div>
  <%= f.label "商品名" %><%= f.text_field :name %>
 </div>
 <div>
  <%= f.label "商品内容" %><%= f.text_field :content %>
 </div>
 <div>
  <%= f.submit "更新" %>
 </div>
<% end %>

<div>
 <%= link_to "戻る", admin_item_path(@item.id) %>
</div>
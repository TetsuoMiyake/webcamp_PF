<div class="container">
 <div class="row">
  <div class="col-sm-4 col-lg-3 mt-3 mb-3">
   <h3 class="title-user">商品情報編集</h3>
  </div>
 </div>
</div>

<%= form_with model:[:admin, @item], local:true do |f| %>
 <div class="container">
  <div class="row">
   <table class="col-sm-12 col-mg-8 mt-5 mb-5">
    <tr height="50">
     <th><%= f.label "商品画像" %></th>
     <th><%= f.attachment_field :image, placeholder: "商品画像" %></th>
    </tr>
    <tr height="50">
     <th><%= f.label "商品名" %></th>
     <th><%= f.text_field :name %></th>
    </tr>
    <tr height="50">
     <th><%= f.label "商品内容" %></th>
     <th><%= f.text_field :content %></th>
    </tr>
    <tr height="50">
     <th><%= f.submit "更新", class: "btn btn-success" %></th>
     <th><%= link_to "戻る", admin_item_path(@item.id), class: "btn btn-primary" %></th>
    </tr>
   </table>
  </div>
 </div>
<% end %>

<style type="text/css">

 .title-user {
  background:linear-gradient(45deg, #4fffc4, #fff);
  font-family: YuGothic;
 }

</style>
<h2>商品詳細</h2>

<%= form_with model:[:admin, @item], local:true do |f| %>
 <div class="container">
  <div class="row">
   <table class="col-sm-12 col-mg-8 mt-sm-5 table-bordered">
    <tr height="50">
     <th>商品画像</th>
     <th><%= attachment_image_tag @item, :image, size: '250x200' %></th>
     </tr>
    <tr height="50">
     <th>商品名</th>
     <th><%= @item.name %></th>
    </tr>
    <tr height="50">
     <th>商品内容</th>
     <th><%= @item.content %></tr>
    </tr>
    <tr height="50">
     <th><%= link_to "編集する", edit_admin_item_path(@item.id) %></th>
     <th><%= link_to "一覧に戻る", admin_items_path %></th>
    </tr>

<% end %>
<div class="container">
 <div class="row">
  <div class="col-sm-3 col-lg-2 mt-3">
   <h3 class="title-user">商品一覧</h3>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto mb-3">
   <div class="text-right"><%= link_to "新規登録", new_admin_item_path, class: "btn btn-primary" %></div>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-6 mx-auto">
   <table class="table">
    <thead>
     <tr class="title-bar">
      <th>商品名</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <% @items.each do |item| %>
      <tr>
       <th><%= item.name %></th>
       <th class="text-center"><%= link_to "詳細", admin_item_path(item.id) %></th>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto mb-3">
   <div class="col-2 mx-auto page"><%= paginate @items %></div>
  </div>
 </div>
</div>

<style type="text/css">

 .title-user {
  background:linear-gradient(45deg, #4fffc4, #fff);
  font-family: YuGothic;
 }

 .title-bar {
  background-color: #3fcc9d;
 }

 .page {
  font-family: HiraKakuPro-W6;
 }

</style>
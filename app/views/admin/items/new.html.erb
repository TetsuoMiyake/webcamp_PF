<%= form_with model:[:admin, @item], local:true do |f| %>
 <div class="container">
  <div class="row">
   <table class="col-sm-12 col-mg-8 mt-sm-5">
    <tr height="50">
     <th><%= f.label "商品画像" %></th>
     <th><%= f.attachment_field :image, placeholder: "商品画像" %></th>
    </tr>
    <tr height="50">
     <th><%= f.label "商品名" %></th>
     <th><%= f.text_field :name %></th>
    </tr>
    <tr height="100">
     <th><%= f.label "商品内容" %></th>
     <th><%= f.text_area :content %></th>
    </tr>
    <tr height="100">
     <th><%= f.submit "登録", class: "btn btn-success" %></th>
     <th><%= link_to "一覧に戻る", admin_items_path, class: "btn btn-primary" %></th>
    </tr>
   </table>
  </div>
 </div>
<% end %>
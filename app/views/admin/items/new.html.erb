<div class="container">
 <div class="row">
  <div class="col-sm-3 col-lg-2 mt-3 mb-3">
   <h3 class="title-user">商品登録</h3>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-6 mt-3">
   <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました</br>
    <% @item.errors.full_messages.each do |message| %>
     <%= message %></br>
    <% end %>
   <% end %>
  </div>
 </div>
</div>

<%= form_with model:[:admin, @item], local:true do |f| %>
 <div class="container">
  <div class="row">
   <table class="col-sm-12 col-mg-8 mt-5 mb-5">
    <tr height="50">
     <th><%= f.label "商品画像" %></th>
     <th><%= f.attachment_field :image, placeholder: "商品画像" %></th>
    </tr>
    <tr height="50">
     <th><%= f.label "商品名" %></th>
     <th><%= f.text_field :name %></th>
    </tr>
    <tr height="100">
     <th><%= f.label "商品内容" %></th>
     <th><%= f.text_area :content %></th>
    </tr>
    <tr height="100">
     <th><%= f.submit "登録", class: "btn btn-success" %></th>
     <th><%= link_to "一覧に戻る", admin_items_path, class: "btn btn-primary" %></th>
    </tr>
   </table>
  </div>
 </div>
<% end %>

<style type="text/css">

 .title-user {
  background:linear-gradient(45deg, #4fffc4, #fff);
  font-family: YuGothic;
 }

</style>
<div class="container">
 <div class="row">
  <div class="col-sm-6 mt-3">
   <h3>日報新規登録</h3>
  </div>
 </div>
</div>

<%= form_with model: @daily_report, local:true do |f| %>

 <%= f.hidden_field :user_id, value: current_user.id %>
 <div class="container">
  <div class="row">
   <table class="col-sm-12 col-mg-8 mt-sm-5">
    <tr height="50">
     <th><%= f.label "訪問日時" %></th>
     <th><%= f.datetime_field :start_time %></th>
    </tr>
    <tr height="50">
     <th><%= f.label "得意先" %></th>
     <th><%= f.select :customer_id, options_from_collection_for_select(Customer.all, :id, :name) %></th>
    </tr>
    <tr height="50">
     <th><%= f.label "訪問内容" %></th>
     <th><%= f.text_area :content %></th>
    </tr>
    <tr height="50">
     <th><%= f.submit "登録", class: "btn btn-success" %></th>
     <th><%= link_to "一覧に戻る", daily_reports_path, class: "btn btn-primary" %></th>
    </tr>
   </table>
  </div>
 </div>
<% end %>
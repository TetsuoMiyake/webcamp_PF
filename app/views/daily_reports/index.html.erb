<div class="container">
 <div class="row">
  <div class="col-sm-6 mt-3 mb-3">
   <h3>日報一覧</h3>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto mb-3">

    <%= form_with(url: search_daily_reports_path, local: true, method: :get, class:"search-form")  do |f| %>
     <%= f.select :user_id, options_from_collection_for_select(User.all, :id, :name), include_blank: "" %>
     <%= f.select :customer_id, options_from_collection_for_select(Customer.all, :id, :name), include_blank: "" %>
     <%= f.submit "検索" %>
    <% end %>

  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-10 mx-auto">
   <table class="table">
    <thead>
     <tr class="table-secondary">
      <th>担当者名</th>
      <th>得意先名</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <% @daily_reports.each do |daily_report| %>
      <tr>
       <th><%= daily_report.user.name %></th>
       <th><%= daily_report.customer.name %></th>
       <th><%= link_to "詳細", daily_report_path(daily_report.id) %></th>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<div><%= link_to "新規登録", new_daily_report_path %></div>

<div class="container">
 <div class="row">
  <div class="col-sm-3 col-lg-2 mt-3">
   <h3 class="title-user">マイページ</h3>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-4 col-lg-3 mt-5 mb-3">
   <h4 class="title-user">〜担当客先一覧〜</h4>
  </div>
 </div>
</div>
<div class="container">
 <div class="row">
  <div class="col-sm-6 mx-auto box">
   <table class="table">
    <thead>
     <tr class="title-bar">
      <th>会社名</th>
      <th></th>
     </tr>
    </thead>

    <tbody>
     <% @customers.each do |customer| %>
      <tr>
       <th><%= customer.name %></th>
       <th><%= link_to "詳細", customer_path(customer.id) %></th>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-3 col-lg-2 mt-5 mb-3">
   <h4 class="title-user">〜日報一覧〜</h4>
  </div>
 </div>
</div>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-12 mt-5">
   <%= month_calendar events: @daily_reports do |date, daily_reports| %>
    <%= date.day %></br>

    <% daily_reports.each do |daily_report| %>
     <%= link_to daily_report.customer.name, daily_report_path(daily_report.id) %></br>
    <% end %>
   <% end %>
  </div>
 </div>
</div>

<style type="text/css">
 .box {
  height: 200px;
  border: 1px solid #000;
  overflow-y: scroll;
 }

 .title-user {
  background:linear-gradient(45deg, #4fffc4, #fff);
  font-family: YuGothic;
 }

 .title-bar {
  background-color: #3fcc9d;
 }

</style>
<h2>ユーザーログイン</h2>

<div class="container">
 <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
   <div class="col-sm-10 mx-auto">
    <div class="col-sm-8 col-md-6 mx-auto">
     <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40x1" %>
     </div>

     <div class="field mb-5">
      <%= f.label "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", :size => "40x1" %>
     </div>
     <div class="col-sm-6 col-md-6 col-lg-4">
      <%= f.submit "ログイン", class: "form-control" %>
     </div>
    </div>
   </div>
  </div>
 <% end %>
</div>

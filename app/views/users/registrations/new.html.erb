<h2>ユーザー登録</h2>

<div class="container">
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
   <div class="row">
    <div class="col-sm-10 mx-auto">
     <div class="col-sm-8 col-md-6 mx-auto">
      <div class="field">
       <%= f.label "名前" %><br />
       <%= f.text_field :name %>
      </div>

      <div class="field">
       <%= f.label "社員番号" %><br />
       <%= f.text_field :number %>
      </div>

      <div class="field">
       <%= f.label "メールアドレス" %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40x1" %>
      </div>

      <div class="field">
       <%= f.label "パスワード" %>
       <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>字以上)</em>
       <% end %>
       <%= f.password_field :password, autocomplete: "new-password", :size => "40x1" %>
      </div>

      <div class="field mb-5">
       <%= f.label "パスワード（確認用）" %><br />
       <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "40x1" %>
      </div>
      <div class="col-sm-6 col-md-6 col-lg-4">
       <%= f.submit "登録", class: "form-control" %>
      </div>
     </div>
    </div>
   </div>
 <% end %>
</div>

